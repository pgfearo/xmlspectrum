<c:color-map name="main">
<!-- highlighted background -->
<c:color name="base" property="background-color">ww</c:color>
<!-- xml 'punctuation' marks tag start/end attribute = char etc -->
<c:color name="base01">base01 eq-equ z sc scx ec es ez atneq
</c:color>
<!-- the normal background -->
<c:color name="base03" property="background-color">
base03 ww:not(:hover) txt:not(:hover) cm:not(:hover) pi:not(:hover)  
</c:color>
<!-- xml text and cdata text -->
<c:color name="base0">base0 txt cd</c:color>
<!-- xpath literal text -->
<c:color name="base1">base1 literal</c:color>
<!-- xpath operators -->
<c:color name="yellow">yellow op type-op if higher step whitespace quantifier
</c:color>
<!-- functions -->
<c:color name="orange">orange function pname
</c:color>
<!-- declared fn and template names -->
<c:color name="red">red fname tname tcall
</c:color>
<!-- variable names -->
<c:color name="magenta">magenta vname variable external
</c:color>
<!-- qnames -->
<c:color name="violet">violet qname type-name unclosed en cl href
</c:color>
<!-- parenthesis and highlighted element names -->
<c:color name="blue">blue enxsl clxsl enx filter parenthesis node
</c:color>
<!-- attribute names + axis -->
<c:color name="cyan">cyan atn numeric pi dt axis context bracedq
</c:color>
<!-- xml and xpath comments -->
<c:color name="green">green cm comment av type node-type
</c:color>
</c:color-map>
<css:boiler-plate>
<css:font scp="@import url(http://fonts.googleapis.com/css?family=Source+Code+Pro);"/>
p.spectrum, pre.spectrum {
<css:main>
    margin:0px;
    font-family:<css:font scp="'Source Code Pro', "/>Monaco, Consolas, 'Andale Mono', 'DejaVu Sans Mono', monospace;
    <css:font scp="font-size: 0.8em;"/>
    white-space: pre-wrap;
    display: block;
    border: none thin;
    border-color: #405075;
    background-color:<css:color name="base03"/>;
    padding: 2px;
    margin-bottom:5px;
</css:main>
}

div.spectrum-toc {
<css:toc>
    font-family:<css:font scp="'Source Code Pro', "/>Monaco, Consolas, 'Andale Mono', 'DejaVu Sans Mono', monospace;
    <css:font scp="font-size: 0.8em;"/>
    display: block;
    border: none thin;
    border-color: #405075;
    background-color:<css:color name="base03"/>;
    padding: 2px;
</css:toc>
}

ul.base1, ul.spectrum-toc {
color:<css:color name="base1"/>;
}

.spectrum span {
    white-space: pre-wrap;
}

<css:map element="span"/>

a.solar {
    text-decoration:none;
}
</css:boiler-plate>

